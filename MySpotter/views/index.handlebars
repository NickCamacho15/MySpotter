<div class="row justify-content-center">
    <div class="col-8 mt-5 text-center">
        <h1>Welcome to MySpotter!</h1>
        <h3>My Workouts</h3>
    </div>
    <div class="col-8 text-right mb-3">
        <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#createWorkoutModal">
            Create New Workout
        </button>
    </div>

    <div class="row justify-content-center">
        <div class=" row justify-content-center col-sm-11 col-md-12 col-lg-10">
             {{#each workouts}}
                <div  class="col-sm-6 col-md-5 col-lg-4 text-dark mt-4 card shadow-sm rounded p-0">
                    <a href="{{dataValues.id}}/exercises" class=" text-decoration-none">
                        <div class="card-body text-center">
                            <p value="{{dataValues.id}}" id="workoutId"></p>
                            <h5 value="{{dataValues.name}}" id="DefaultName" class="card-title">{{dataValues.name}}</h5>
                        </div>
                        
                    </a>
                    <div class="card-footer d-flex justify-content-between">
                             <button class="btn btn-outline-danger btn-sm" onclick="deleteWorkout({{dataValues.id}})">
                                    <i class="fa fa-trash"></i> Delete
                                </button>
                        </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>

<!-- Create Workout Modal -->
<div class="modal fade" id="createWorkoutModal" tabindex="-1" aria-labelledby="createWorkoutModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createWorkoutModalLabel">Create New Workout</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="new-workout-form" method="POST">
                    <div class="mb-3">
                        <label for="workout-name" class="form-label">Workout Name</label>
                        <input id="workout-name" type="text" name="name" class="form-control" placeholder="Workout Name" required>
                    </div>
                    <button type="submit" class="btn btn-outline-dark" data-bs-dismiss="modal">
                        Create
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- EDIT Workout Modal -->
<div class="modal fade" id="editWorkoutModal" tabindex="-1" aria-labelledby="editWorkoutModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editWorkoutModalLabel">Edit Exercise</h5>
        <button type="button" class="btn-close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <form class="edit-workout-form">
          <input type="hidden" id="edit-workout-id">
          <div class="mb-3">
            <label for="edit-workout-name" class="form-label">Name</label>
            <input type="text" class="form-control" id="edit-exercise-name">
          </div>
          <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Save changes</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/js/workout-actions.js"></script>
<script src="/js/delete-exercise.js"></script>
<script src="/js/add-workout.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>







